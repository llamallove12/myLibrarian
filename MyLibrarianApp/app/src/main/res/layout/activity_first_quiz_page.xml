<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_first_quiz_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sashahedges.mylibrarianapp.FirstQuizPage">

    <CheckBox
        android:text="Sci-Fi"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/Sci-Fi"
        android:layout_width="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Material"
        android:textSize="18sp" />

    <CheckBox
        android:text="Fantasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fantasy"
        android:layout_below="@+id/Sci-Fi"
        android:layout_alignLeft="@+id/Sci-Fi"
        android:layout_alignStart="@+id/Sci-Fi"
        android:textSize="18sp" />

    <CheckBox
        android:text="Romance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Fantasy"
        android:layout_alignLeft="@+id/Fantasy"
        android:layout_alignStart="@+id/Fantasy"
        android:id="@+id/Romance"
        android:textSize="18sp" />

    <CheckBox
        android:text="Mystery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Romance"
        android:layout_alignLeft="@+id/Romance"
        android:layout_alignStart="@+id/Romance"
        android:id="@+id/Mystery"
        android:textSize="18sp" />

    <CheckBox
        android:text="Non-Fiction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mystery"
        android:layout_alignLeft="@+id/Mystery"
        android:layout_alignStart="@+id/Mystery"
        android:id="@+id/Non-Fiction"
        android:textSize="18sp" />

    <TextView
        android:text="1/2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/1/2"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:fontFamily="sans-serif"
        android:textSize="18sp" />

    <TextView
        android:text="Select Your Favorite Genres!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Select Your Favorite Genres!"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="24sp"
        android:layout_below="@+id/1/2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Non-Fiction"
        android:layout_toLeftOf="@+id/1/2"
        android:layout_toStartOf="@+id/1/2"
        android:id="@+id/NextPageButton"
        android:textSize="18sp" />

</RelativeLayout>
