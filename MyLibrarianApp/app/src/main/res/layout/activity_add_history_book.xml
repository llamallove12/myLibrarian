<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_history_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sashahedges.mylibrarianapp.addHistoryBook"
    android:alwaysDrawnWithCache="false">

    <TextView
        android:text="Add Book to History:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addHistoryBookTitle"
        android:textColor="@android:color/darker_gray"
        android:textSize="30sp"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:textColor="@android:color/black" />

    <Button
        android:text="Add to History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addHistory"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:hint="Name of Book"
        android:ems="10"
        android:id="@+id/editText2"
        android:backgroundTint="@android:color/background_light"
        android:textSize="24sp"
        android:layout_below="@+id/addHistoryBookTitle"
        android:layout_alignLeft="@+id/addHistoryBookTitle"
        android:layout_alignStart="@+id/addHistoryBookTitle"
        android:layout_marginTop="101dp" />

    <TextView
        android:text="How did you like it?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBarHistory"
        android:layout_below="@+id/textView17"
        android:layout_alignLeft="@+id/textView17"
        android:layout_alignStart="@+id/textView17" />

</RelativeLayout>
