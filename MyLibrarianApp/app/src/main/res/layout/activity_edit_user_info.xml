<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_user_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sashahedges.mylibrarianapp.editUserInfo">

    <TextView
        android:text="Change Email:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/editEmailLabel"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editEmailBox"
        android:layout_alignStart="@+id/editEmailBox"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="New Email"
        android:ems="10"
        android:id="@+id/editEmailBox"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_below="@+id/editEmailLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editEmailBox"
        android:layout_alignStart="@+id/editEmailBox"
        android:layout_marginBottom="18dp"
        android:textSize="20sp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordTextBox"
        android:hint="New Password"
        android:layout_below="@+id/changePassword"
        android:layout_alignLeft="@+id/changePassword"
        android:layout_alignStart="@+id/changePassword" />

    <TextView
        android:text="Change Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/changePassword"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_below="@+id/editEmailBox"
        android:layout_alignLeft="@+id/editEmailBox"
        android:layout_alignStart="@+id/editEmailBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTextBox"
        android:hint="New Name"
        android:layout_below="@+id/changeUserName"
        android:layout_alignLeft="@+id/changeUserName"
        android:layout_alignStart="@+id/changeUserName" />

    <TextView
        android:text="Change Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeUserName"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/passwordTextBox"
        android:layout_alignLeft="@+id/passwordTextBox"
        android:layout_alignStart="@+id/passwordTextBox" />

</RelativeLayout>
