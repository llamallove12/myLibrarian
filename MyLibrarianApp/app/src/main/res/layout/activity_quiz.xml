<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sashahedges.mylibrarianapp.quiz">

    <!--  android:id="@+id/changeUserInfoButton"  -->
    <!-- android:id="@+id/doIt" -->

    <TextView
        android:text="Would you like to take a short quiz to help us improve your recommendations?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:id="@+id/textView7"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <Button
        android:text="Let's Do It!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doIt"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/textView7"
        android:layout_toLeftOf="@+id/changeUserInfoButton"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />

    <Button
        android:text="Not Now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/changeUserInfoButton"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignBaseline="@+id/doIt"
        android:layout_alignBottom="@+id/doIt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
